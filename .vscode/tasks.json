{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "esbuild",
            "type": "npm",
            "script": "esbuild-watch",
            "isBackground": true,
            "group": "build",
            "problemMatcher": [
                {
                    "owner": "typescript",
                    "source": "ts",
                    "applyTo": "closedDocuments",
                    "fileLocation": "relative",
                    "severity": "error",
                    "pattern": [
                        {
                            "regexp": "^\\s*âœ˜\\s*\\[ERROR\\]\\s*(.+)$",
                            "message": 1
                        },
                        {
                            "regexp": "^\\s*$"
                        },
                        {
                            "regexp": "^\\s*(.+):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "\\s*esbuild"
                        },
                        "endsPattern": {
                            "regexp": "^\\s*\\[watch\\] build finished"
                        }
                    }
                },
            ]
        },
        {
            "label": "tsc",
            "command": "npx",
            "args": [
                "tsc",
                "-b",
                "-w",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "tsc-win",
            "command": "tsc.cmd",
            "args": [
                "-b",
                "-w",
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        }
    ]
}
