{
    "compilerOptions": {
        "declaration": true,
        "module": "Node16",
        "target": "ES2022",
        "moduleResolution": "node16",
        "outDir": "../../out",
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true, // For D3.js
        "strictNullChecks": true,
        "alwaysStrict": true,
        "composite": true,
        "rootDir": "../.."
    },
    "include": [
        "./*.ts",
        "../types.ts"
    ],
    "exclude": []
}
